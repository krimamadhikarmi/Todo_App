
<%= simple_form_for todo, html: { class: "todo form" } do |f| %>
  <% if todo.errors.any? %>
    <div class="error-message">
      <%= todo.errors.full_messages.to_sentence.capitalize %>
    </div>
  <% end %>

  <div  class="flex justify-center">

   <div class="rounded overflow-hidden shadow-lg bg-stone-200 mb-5 w-3/6 ml-16">
      <div class="px-6 py-8 h-full flex">
        <div class="mb-2 "><%= f.input :task, input_html: { autofocus: true } %></div>
      </div>
   </div>
   
   <div class="ml-10 mt-10 ">
     
      <%= f.submit class: "btn mr-8" %>
       <%= link_to "Cancel", todos_path, class: "btn " %>
    </div>

  </div>
<% end %>

 