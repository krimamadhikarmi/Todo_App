<div id="form" data-turbo-frame>
  <%= simple_form_for todo, html: { class: "todo form" } do |f| %>
    <% if todo.errors.any? %>
      <div class="error-message">
        <%= todo.errors.full_messages.to_sentence.capitalize %>
      </div>
    <% end %>

    <div class="flex justify-center">
      <div class="rounded overflow-hidden shadow-lg bg-stone-200 mb-5 w-3/6 ml-14">
        <div class="px-6 py-8 h-full flex">
          <div class="mt-2 ml-5 w-96">
            <%= f.input :task, label: false , as: :string, input_html: { id: "task", autocomplete: "off", class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6", required: true } %>
          </div>
        </div>
      </div>
      <div class="ml-10  flex items-center">
        <%= f.submit "Submit", class: "hidden" %>
        <%= button_tag type: "submit", class: "btn mr-8" do %>
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
            <path stroke-linecap="round" stroke-linejoin="round" d="M12 4.5v15m7.5-7.5h-15" />
          </svg>
        <% end %>

        <%= link_to todos_path, class: "btn" do %>
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 384 512" class="w-6 h-6"> 
            <path d="M342.6 150.6c12.5-12.5 12.5-32.8 0-45.3s-32.8-12.5-45.3 0L192 210.7 86.6 105.4c-12.5-12.5-32.8-12.5-45.3 0s-12.5 32.8 0 45.3L146.7 256 41.4 361.4c-12.5 12.5-12.5 32.8 0 45.3s32.8 12.5 45.3 0L192 301.3 297.4 406.6c12.5 12.5 32.8 12.5 45.3 0s12.5-32.8 0-45.3L237.3 256 342.6 150.6z"/></svg>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
